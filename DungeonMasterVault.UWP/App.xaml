<common:BootStrapper 
    x:Class="DungeonMasterVault.UWP.App" 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"     
    xmlns:common="using:Template10.Common"
    xmlns:core="using"
    xmlns:controls="using:Template10.Controls"
    xmlns:local="using:DungeonMasterVault.UWP"
    xmlns:vm="using:DungeonMasterVault.UWP.ViewModels"
    xmlns:convert="using:DungeonMasterVault.Mvvm.Converters"
    RequestedTheme="Dark">

    <Application.Resources>
        <ResourceDictionary>
            <vm:WindowsViewModelLocator x:Key="ViewModelLocator" />            
            <convert:ItemClickEventArgsConverter x:Key="ItemClickEventArgsConverter" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles\Custom.xaml" />
                <ResourceDictionary Source="Styles\Encounters.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</common:BootStrapper>
